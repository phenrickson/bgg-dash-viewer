# Environment (dev, test, prod)
ENVIRONMENT=dev

# Google Cloud credentials
GOOGLE_APPLICATION_CREDENTIALS=credentials/service-account-key.json

# BigQuery settings
GCP_PROJECT_ID=your-project-id

# Application settings
DEBUG=True
CACHE_TIMEOUT=3600  # Cache timeout in seconds

# Authentication
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-me-in-production

# Server settings
PORT=8050
HOST=0.0.0.0

# Similarity Search Configuration
# By default, queries BigQuery directly (no service needed for local dev)
# Uncomment SIMILARITY_SERVICE_URL to use the embeddings service instead
# SIMILARITY_SERVICE_URL=http://localhost:8080
# SIMILARITY_SERVICE_TIMEOUT=30
